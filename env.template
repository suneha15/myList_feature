# MongoDB Configuration
# Copy this file to .env and update with your MongoDB connection string

# Production/Development MongoDB URI
MONGODB_URI=mongodb://localhost:27017/ott_platform

# Test MongoDB URI (used when NODE_ENV=test)
MONGODB_TEST_URI=mongodb://localhost:27017/ott_platform_test

# Server Configuration
PORT=3000
NODE_ENV=development

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_ENABLED=false

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your-secret-key-here
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

